<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
android:background="#FDF2F2">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/webinarlayout"
                  android:layout_margin="10dp" android:padding="10dp"
                  android:id="@+id/p">
        <ImageView
                android:layout_width="60dp" android:layout_height="60dp"
                android:background="@drawable/yef_logonew"
                android:src="@drawable/yef_logonew" android:layout_margin="5dp" android:id="@+id/pic"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/webinar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="#0B0B0B"/>

            <TextView
                    android:drawableStart="@drawable/ic_event_available_black_24dp"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textAppearance="?attr/textAppearanceListItem" android:textColor="#93030F"
                    android:textSize="18sp" android:fontFamily="sans-serif-smallcaps"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



